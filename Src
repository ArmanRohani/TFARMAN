    <script>
        // Sticky Header
        const header = document.getElementById('header');
        const headerHeight = header.offsetHeight; 

        window.addEventListener('scroll', function() {
            if (window.scrollY > 30) { 
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
        });
        
        // Mobile Menu Toggle
        const mobileMenuToggle = document.getElementById('mobileMenuToggle');
        const navLinks = document.getElementById('navLinks');
        const body = document.body;
        const mobileOnlyCTA = document.querySelector('.mobile-only-cta');

        if (mobileMenuToggle && navLinks) {
            mobileMenuToggle.addEventListener('click', function() {
                navLinks.classList.toggle('open');
                mobileMenuToggle.classList.toggle('active');
                body.classList.toggle('mobile-menu-open');
                const isExpanded = navLinks.classList.contains('open');
                mobileMenuToggle.setAttribute('aria-expanded', isExpanded);
            });

            navLinks.querySelectorAll('a, .mobile-only-cta').forEach(link => {
                link.addEventListener('click', () => {
                    if (navLinks.classList.contains('open')) {
                        navLinks.classList.remove('open');
                        mobileMenuToggle.classList.remove('active');
                        body.classList.remove('mobile-menu-open');
                        mobileMenuToggle.setAttribute('aria-expanded', 'false');
                    }
                });
            });
        }
        
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                const targetId = this.getAttribute('href');
                if (targetId === '#') {
                    e.preventDefault();
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                    return;
                }
                
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    e.preventDefault();
                    let currentHeaderHeight = document.getElementById('header').offsetHeight;
                    
                    window.scrollTo({
                        top: targetElement.offsetTop - currentHeaderHeight - 20, 
                        behavior: 'smooth'
                    });
                }
            });
        });
        
        // Carousel functionality
        function initCarousel() {
            const carousel = document.querySelector('.algo-carousel');
            if (!carousel) return;

            const track = carousel.querySelector('.algo-carousel-track');
            const slides = Array.from(carousel.querySelectorAll('.algo-carousel-slide'));
            const nextButton = carousel.querySelector('.algo-carousel-button.next');
            const prevButton = carousel.querySelector('.algo-carousel-button.prev');
            const dotsContainer = carousel.querySelector('.algo-carousel-dots');
            
            if (!track || !slides.length || !nextButton || !prevButton || !dotsContainer) return;
            
            let currentIndex = 0;
            let visibleSlides = getVisibleSlides();
            const totalUniqueSlides = slides.length; 
            let numPages = Math.ceil(totalUniqueSlides / visibleSlides);

            function getVisibleSlides() {
                if (window.innerWidth < 768) return 1;
                if (window.innerWidth < 992) return 2; 
                return 3;
            }

            function createDots() {
                dotsContainer.innerHTML = '';
                numPages = Math.ceil(totalUniqueSlides / visibleSlides);

                if (numPages <= 1) {
                    nextButton.style.display = 'none';
                    prevButton.style.display = 'none';
                    dotsContainer.style.display = 'none';
                    return;
                }
                
                nextButton.style.display = 'flex';
                prevButton.style.display = 'flex';
                dotsContainer.style.display = 'flex';

                for (let i = 0; i < numPages; i++) {
                    const dot = document.createElement('div');
                    dot.classList.add('algo-carousel-dot');
                    if (i === currentIndex) dot.classList.add('active');
                    dot.addEventListener('click', () => {
                        currentIndex = i;
                        updateCarouselPosition();
                    });
                    dotsContainer.appendChild(dot);
                }
            }
            
            const updateCarouselPosition = () => {
                const movePercentage = -currentIndex * 100;
                track.style.transform = `translateX(${movePercentage}%)`;
                
                const dots = dotsContainer.querySelectorAll('.algo-carousel-dot');
                dots.forEach((dot, index) => {
                    dot.classList.toggle('active', index === currentIndex);
                });
            };
            
            const handleResize = () => {
                const newVisibleSlides = getVisibleSlides();
                if (newVisibleSlides !== visibleSlides) {
                    visibleSlides = newVisibleSlides;
                    currentIndex = 0; 
                    createDots(); 
                    updateCarouselPosition();
                }
            };
            
            nextButton.addEventListener('click', () => {
                currentIndex = (currentIndex + 1) % numPages;
                updateCarouselPosition();
            });
            
            prevButton.addEventListener('click', () => {
                currentIndex = (currentIndex - 1 + numPages) % numPages;
                updateCarouselPosition();
            });
            
            window.addEventListener('resize', handleResize);
            createDots(); 
            updateCarouselPosition(); 
        }

        // Scroll Reveal Animations
        function initScrollReveal() {
            const revealElements = document.querySelectorAll('.reveal-on-scroll');
            if (!revealElements.length) return;

            const observer = new IntersectionObserver(entries => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('animate-in-view');
                    }
                });
            }, { threshold: 0.1 }); 

            revealElements.forEach(el => observer.observe(el));
        }

        // Favorite Icon Toggle
        function initFavoriteIcons() {
            const favoriteIcons = document.querySelectorAll('.favorite-icon');
            favoriteIcons.forEach(iconEl => {
                const isFavorited = iconEl.dataset.favorited === 'true';
                iconEl.classList.toggle('favorited', isFavorited);
                iconEl.innerHTML = isFavorited ? '<i class="fas fa-heart"></i>' : '<i class="far fa-heart"></i>';

                iconEl.addEventListener('click', function() {
                    const currentlyFavorited = this.classList.toggle('favorited');
                    this.dataset.favorited = currentlyFavorited;
                    this.innerHTML = currentlyFavorited ? '<i class="fas fa-heart"></i>' : '<i class="far fa-heart"></i>';
                    this.setAttribute('aria-label', currentlyFavorited ? 'Unfavorite this algorithm' : 'Favorite this algorithm');
                });
            });
        }

        // Algo Engine Animation
        function initAlgoEngineAnimation() {
            const executeBtn = document.getElementById('executeTradeBtn');
            const resultsPopup = document.getElementById('backtestResultsPopup');
            const closeResultsBtn = document.getElementById('closeResultsBtn');
            const animatedVisual = document.getElementById('algoEngineAnimatedVisual');
            const svgContainer = document.getElementById('connectorSvgContainer');

            if (!executeBtn || !resultsPopup || !closeResultsBtn || !animatedVisual || !svgContainer) return;

            const coreEl = animatedVisual.querySelector('.animated-core');
            const nodeRsi = animatedVisual.querySelector('.node-rsi');
            const nodePe = animatedVisual.querySelector('.node-pe');
            const nodeMacd = animatedVisual.querySelector('.node-macd');
            
            const coreRect = coreEl.getBoundingClientRect();
            const visualRect = animatedVisual.getBoundingClientRect();
            const coreCenterX = coreEl.offsetLeft + coreEl.offsetWidth / 2;
            const coreCenterY = coreEl.offsetTop + coreEl.offsetHeight / 2;

            // Function to create and animate an SVG line
            function createAnimatedLine(node, delay, idSuffix, targetX, targetY) {
                const nodeRect = node.getBoundingClientRect();
                const startX = node.offsetLeft + node.offsetWidth / 2;
                const startY = node.offsetTop + node.offsetHeight / 2;
                
                const line = document.createElementNS('http://www.w3.org/2000/svg', 'line');
                line.setAttribute('x1', startX);
                line.setAttribute('y1', startY);
                line.setAttribute('x2', targetX); // Target core center
                line.setAttribute('y2', targetY);
                line.classList.add('line-draw-animation');
                if (idSuffix.includes('output')) {
                    line.style.stroke = 'var(--secondary-accent)';
                }
                line.style.animationDelay = `${delay}s`;
                
                // Calculate length for dashoffset (for drawing effect)
                const length = Math.sqrt(Math.pow(targetX - startX, 2) + Math.pow(targetY - startY, 2));
                line.style.strokeDasharray = length;
                line.style.strokeDashoffset = length;

                svgContainer.appendChild(line);
            }
            
            // Create lines after nodes are positioned and core is known
            // This needs to happen after initial CSS positioning is applied.
            // A small timeout or requestAnimationFrame can ensure elements are laid out.
            requestAnimationFrame(() => {
                // Adjust target points slightly to connect to edge of core, not dead center
                const coreRadius = coreEl.offsetWidth / 2;
                
                createAnimatedLine(nodeRsi, 1.0, '1', coreCenterX - coreRadius * 0.707, coreCenterY - coreRadius * 0.707); // Top-left
                createAnimatedLine(nodePe, 1.2, '2', coreCenterX - coreRadius, coreCenterY); // Mid-left
                createAnimatedLine(nodeMacd, 1.4, '3', coreCenterX + coreRadius * 0.707, coreCenterY - coreRadius * 0.707); // Top-right
                
                // Line from core to button (approximate)
                const btnRect = executeBtn.getBoundingClientRect();
                const btnTopCenterX = executeBtn.offsetLeft + executeBtn.offsetWidth / 2;
                const btnTopCenterY = executeBtn.offsetTop;

                const outputLine = document.createElementNS('http://www.w3.org/2000/svg', 'line');
                outputLine.setAttribute('x1', coreCenterX);
                outputLine.setAttribute('y1', coreCenterY + coreRadius); // Start from bottom edge of core
                outputLine.setAttribute('x2', btnTopCenterX);
                outputLine.setAttribute('y2', btnTopCenterY);
                outputLine.classList.add('line-draw-animation');
                outputLine.style.stroke = 'var(--secondary-accent)';
                outputLine.style.animationDelay = '1.8s';
                const outputLength = Math.sqrt(Math.pow(btnTopCenterX - coreCenterX, 2) + Math.pow(btnTopCenterY - (coreCenterY + coreRadius), 2));
                outputLine.style.strokeDasharray = outputLength;
                outputLine.style.strokeDashoffset = outputLength;
                svgContainer.appendChild(outputLine);
            });


            executeBtn.addEventListener('click', () => {
                resultsPopup.classList.add('visible');
            });

            closeResultsBtn.addEventListener('click', () => {
                resultsPopup.classList.remove('visible');
            });
        }
        
        window.addEventListener('load', function() {
            initCarousel();
            initScrollReveal();
            initFavoriteIcons();
            initAlgoEngineAnimation();
        });
    </script>
</body>
</html>
